<%= simple_form_for [@flat, @booking] do |f| %>
  <%= f.input  :arrival_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 2 %>
  <%= f.input  :departure_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 2 %>
  <%= f.input :message_customer, placeholder: "Hello ! I'm on vacation with a friend..." %>
  <%= f.submit "Submit demand", class: "btn btn-primary"  %>
<% end %>
