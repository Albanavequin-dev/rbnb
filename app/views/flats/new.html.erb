<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new flat</h3>
      <%= simple_form_for @flat do |f| %>
        <%= f.input :address, placeholder: 'Paris...' %>
        <%= f.input :description, placeholder: 'fancy and comfy...' %>
        <%= f.submit class: 'btn btn-flat' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
