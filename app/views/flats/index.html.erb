<div class="flex-container">

  <div class="flex-item1">
  <%= link_to "Create a flat", new_flat_path, class: "btn btn-primary" %></div>

  <div class="flex-item2">
  <%= link_to "My booking", bookings_path,class: "btn btn-primary" %></div>

  <div class="flex-item3">
    <%= form_with url: flats_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a location"
       %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %></div>
</div>


<h1>Flats</h1>


<% @flats.each do |flat|%>
<ul>
<li><b><%= link_to  flat.name,  flat_path(flat)%> </b> : <i><u> <%= flat.address  %> </i></u> ; <%= flat.description  %></li>
</ul>

<% end  %>
